NAME = megaphone
CC = c++
FLAGS = -Wall -Wextra -Werror -std=c++98
FILES = megaphone.cpp

OBJ = $(FILES:.cpp=.o)

all : $(NAME)

%.o : %.c
	$(CC) $(FLAGS) -c $< -o $@

$(NAME) : $(OBJ)
	$(CC) $(FILES) $(FLAGS) -o $(NAME)

clean :
		@rm -f $(OBJ)

fclean : clean
		@rm -f $(NAME)

re : fclean all